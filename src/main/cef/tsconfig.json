{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "types": ["../../node_modules/@ragempcommunity/types-cef", "vue"],
        "baseUrl": "../../",
        "paths": {
            "@shared/*": ["main/shared/*"],
            "@vue/*": ["vue/*"]
        },
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "Bundler",
        "allowJs": true,
        "jsx": "preserve",
        // Add these to help with Vue file resolution
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "./",                         
        "./**/*",                    
        "../shared/**/*",            
        "../plugin/**/cef/**/*.ts",  // Changed to relative path
        "../plugin/**/cef/**/*.vue", // Changed to relative path
    ],
    "exclude": [
        "../shared/**/*.d.ts",
        "node_modules"
    ]
}