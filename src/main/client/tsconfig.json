{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "types": ["../../node_modules/@ragempcommunity/types-client"],
        "baseUrl": "../../",  // Changed to src folder
        "paths": {
            "@shared/*": ["main/shared/*"]
        },
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "Bundler"
    },
    "include": [
        "./**/*.ts",                    // Main client files
        "../shared/**/*.ts",            // Shared files
        "../../plugin/**/client/**/*.ts"  // All plugin client files
    ],
    "exclude": [
        "../shared/**/*.d.ts"
    ]
}
