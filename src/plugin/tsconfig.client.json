{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "types": ["../../node_modules/@ragempcommunity/types-client"],
        "baseUrl": "../",
        "paths": {
            "@shared/*": ["main/shared/*"]
        },
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "Bundler",
        "allowJs": true
    },
    "include": [
        "../**/client/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}